<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_weight="8">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:inputType="numberDecimal|numberSigned"
        android:id="@+id/textview"
        android:layout_weight="3"
        android:textAlignment="viewEnd"
        android:textSize="50sp"
        android:text="0"/>


</LinearLayout>

    <LinearLayout
        android:background="#080f6a"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/b1"
            android:text="1"
            android:textSize="24sp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/b2"
            android:text="2"
            android:textSize="24sp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/b3"
            android:text="3"
            android:textSize="24sp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/b4"
            android:text="+"
            android:textSize="24sp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.Button.Borderless"/>



    </LinearLayout>

<LinearLayout
    android:background="#080f6a"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="4">

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:id="@+id/b5"
        android:text="4"
        android:textSize="24sp"
        android:textColor="#ffffff"
        style="@style/Widget.AppCompat.Button.Borderless"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:id="@+id/b6"
        android:text="5"
        android:textSize="24sp"
        android:textColor="#ffffff"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:id="@+id/b7"
        android:text="6"
        android:textSize="24sp"
        android:textColor="#ffffff"
        style="@style/Widget.AppCompat.Button.Borderless"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:id="@+id/b8"
        android:text="-"
        android:textSize="24sp"
        android:textColor="#ffffff"
        style="@style/Widget.AppCompat.Button.Borderless"/>


</LinearLayout>

    <LinearLayout
        android:background="#080f6a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/b9"
            android:text="7"
            android:textColor="#ffffff"
            android:textSize="24sp"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/b10"
            android:text="8"
            android:textSize="24sp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/b11"
            android:text="9"
            android:textSize="24sp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/b12"
            android:text="*"
            android:textSize="24sp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.Button.Borderless"
            />


    </LinearLayout>
    <LinearLayout
        android:background="#080f6a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/b13"
            android:text="0"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="24sp"
            android:textColor="#ffffff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/b14"
            android:text="."
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="24sp"
            android:textColor="#ffffff"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/b15"
            android:text="C"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="24sp"
            android:textColor="#ffffff"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:id="@+id/b16"
            android:text="="
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="24sp"
            android:textColor="#ffffff"/>




    </LinearLayout>


</LinearLayout>